{
  "name": "@neo4j-ndl/react",
  "version": "2.3.2",
  "sideEffects": false,
  "description": "React implementation of Neo4j Design System",
  "keywords": [
    "neo4j",
    "react",
    "design system",
    "needle",
    "ndl"
  ],
  "author": "Neo4j Inc.",
  "homepage": "https://www.neo4j.design",
  "license": "GPL-3.0",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/types/index.d.ts",
  "exports": {
    "./icons": {
      "import": "./lib/esm/icons/index.js",
      "require": "./lib/cjs/icons/index.js",
      "types": "./lib/types/icons/index.d.ts"
    },
    ".": {
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js",
      "types": "./lib/types/index.d.ts"
    }
  },
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib",
    "icons"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "generate-component": "node ./scripts/component-generator.js",
    "pretest": "yarn run lint",
    "test": "vitest run && vitest typecheck --run",
    "build": "yarn build:esm && yarn build:cjs && yarn build:types",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "watch:esm": "tsc -p tsconfig.esm.json --watch",
    "watch:cjs": "tsc -p tsconfig.cjs.json --watch",
    "build:types": "tsc -p tsconfig.types.json",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx}'",
    "lint": "eslint --ext .jsx,.tsx,.js,.ts src",
    "generate:all": "yarn generate:custom-icons && yarn generate:hero-icons",
    "generate:custom-icons": "svgr --template svgr-template.js --index-template svgr-index-template.js --icon --typescript --no-svgo --replace-attr-values '#535B66=currentColor' --jsx-runtime 'automatic' --out-dir ./src/icons/generated/custom -- ../base/src/icons",
    "generate:hero-icons": "ts-node ./scripts/generatedHeroIcons.ts"
  },
  "devDependencies": {
    "@svgr/cli": "6.5.1",
    "@testing-library/jest-dom": "5.17.0",
    "@testing-library/react": "14.0.0",
    "@testing-library/user-event": "14.4.3",
    "@types/react": "18.2.18",
    "@types/react-datepicker": "^4.11.2",
    "@types/react-dom": "18.2.7",
    "@types/react-syntax-highlighter": "^15.5.5",
    "@types/react-table": "^7.7.10",
    "@types/tinycolor2": "^1.4.3",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "jsdom": "22.1.0",
    "react": "18.2.0",
    "react-select-event": "^5.5.0",
    "resize-observer-polyfill": "^1.5.1",
    "ts-node": "^10.9.1",
    "typescript": "5.1.6",
    "vitest": "0.34.1",
    "vitest-axe": "0.1.0",
    "vitest-canvas-mock": "0.3.3"
  },
  "peerDependencies": {
    "@heroicons/react": "2.0.13",
    "react": ">=16.8.0"
  },
  "dependencies": {
    "@floating-ui/react": "0.25.1",
    "@heroicons/react": "2.0.13",
    "@neo4j-cypher/react-codemirror": "^1.0.1",
    "@neo4j-ndl/base": "^2.3.1",
    "@table-nav/core": "0.0.7",
    "@table-nav/react": "0.0.7",
    "@tanstack/react-table": "^8.9.3",
    "classnames": "^2.3.1",
    "date-fns": "^2.30.0",
    "detect-browser": "^5.3.0",
    "re-resizable": "^6.9.11",
    "react-aria": "^3.25.0",
    "react-datepicker": "^4.14.1",
    "react-dropzone": "^14.0.0",
    "react-focus-lock": "^2.9.4",
    "react-select": "5.7.0",
    "react-syntax-highlighter": "^15.5.0",
    "react-table": "^7.7.0",
    "react-use": "^17.4.0",
    "tinycolor2": "^1.4.2",
    "usehooks-ts": "2.9.1"
  },
  "resolutions": {
    "@types/react": "18.2.18",
    "@types/react-dom": "18.2.7"
  }
}